extends layout

block content
.container-fluid
      .page-header
        h2 Hi #{data.reg_no}
        h3 Enter new details:
    form(role='form', method='POST', action='/edit')
         .form-group
            label(for='name') Name:
            input#name.form-control(type='text', name='name')
        .form-group
            label(for='email') Email:
            input#email.form-control(type='email', name='email')
        .form-group
            label(for='mobile') Phone No.:
            input#mobile.form-control(type='number', name='mobile')
          button.btn.btn-default(type='submit') Submit
    